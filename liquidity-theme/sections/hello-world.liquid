<div class="hello">
  <h1>{{ section.settings.heading }}</h1>
</div>

{% stylesheet %}
.hello {
  padding: 2rem;
  text-align: center;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Hello World",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hello, World!"
    }
  ],
  "presets": [
    {
      "name": "Hello World"
    }
  ]
}
{% endschema %}
